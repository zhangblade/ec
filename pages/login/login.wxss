/* pages/login/login.wxss */
.login{
  width: 100%;
  min-height: 100vh;
  padding-top: 70px;
  background-color: #F5F5F5;
}
.login .content .head-img{
  width: 4.5rem;
  height: 4.5rem;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #E8E8E8;
}
.login .content .head-img image{
  width: 2.5rem;
  height: 2.5rem;
}
.login .content .status{
  font-size: 16px; 
  color: #252525;
  font-weight: bold;
  text-align: center;
  margin: 10px 0px 35px 0px;
}
.login .content .prompt{
  font-size: 14px; 
  color: #444444;
  text-align: center;
}
.login .content .submit{
  width: 60%;
  line-height: 25px;
  font-size: 14px;
  color: white;
  margin: 0 auto;
  margin-top: 20px;
  text-align: center;
  background-color: #4587F7;
}