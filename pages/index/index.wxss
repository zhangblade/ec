/**index.wxss**/
.content{
  width: 100%;
}
.content .img{
  text-align: center;
  margin-bottom: 30px;
}
.content .img image{
  width: 110px;
  height: 170px;
}
.content .desc_list .text{
  width: 240px; 
  margin: 0 auto;
  font-size: 14px;
  color: #7E7E7E;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.content .desc_list .text .num{
  width: 18px;
  height: 18px;
  font-size: 12px;
  color: white;
  margin: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #4587F7;
}
.content .confirm{
  width: 90%;
  font-size: 14px;
  color: white;
  margin: 0 auto;
  margin-top: 100px;
  line-height: 30px;
  text-align: center;
  border-radius: 5px;
  background-color: #4587F7;
}